@page "/MiVista"
@using blazor.Components.Data
@inject blazor.Components.Servicios.ServicioControlador ServicioControlador
@rendermode InteractiveServer

<h3>Juegos</h3>
<div>
    <input placeholder="Buscar por nombre..." @bind="busqueda" @bind:event="oninput" />
</div>

<div>
    <input type="checkbox" @bind="mostrarSoloPendientes" />
    <label>Mostrar solo juegos pendientes</label>
</div>

<ul>
    @foreach (var j in JuegosFiltrados)
    {
        <li>
            @if (IdEditar == j.Identificador)
            {
                <input @bind="editNombre" />
                <button @onclick="() => GuardarEdicion(j)">Guardar</button>
                <button @onclick="CancelarEdicion">Cancelar</button>
            }
            else
            @j.Nombre
            @(j.Jugado ? "Ya jugado" : "  "+"[Pendiente]")
            <input type="checkbox" checked="@j.Jugado" @onclick="() => CambiarJugado(j)" />
            <button @onclick="() => EliminarJuego(j)">Eliminar</button>
            <button @onclick="() => IniciarEdicion(j)">Editar</button>

        </li>
    }
</ul>

<div>
    <input @bind="newJuego.Nombre" placeholder="Nuevo Juego" />
    <button @onclick="AgregarJuego">AgregarJuego</button>
</div>

@code {
    private List<Juego> juegos = new();
    private Juego newJuego = new();
    private bool mostrarSoloPendientes = false;
    private int? IdEditar = null;
    private string editNombre = string.Empty;
    private string busqueda = string.Empty;

    private IEnumerable<Juego> JuegosFiltrados =>
        juegos.Where(j =>
            (!mostrarSoloPendientes || !j.Jugado)
            && (string.IsNullOrWhiteSpace(busqueda) || (j.Nombre?.Contains(busqueda, StringComparison.OrdinalIgnoreCase) == true))
        );

    protected override async Task OnInitializedAsync()
    {
        juegos = await ServicioControlador.ObtenerJuegos();
    }

    private async Task AgregarJuego()
    {
        if (!string.IsNullOrWhiteSpace(newJuego.Nombre))
        {
            newJuego.Jugado = false;
            await ServicioControlador.AgregarJuego(newJuego);
            juegos = await ServicioControlador.ObtenerJuegos();
            newJuego = new Juego();
        }
    }

    private void CambiarJugado(Juego juego)
    {
        juego.Jugado = !juego.Jugado;
    }

    private async Task EliminarJuego(Juego juego)
    {
        await ServicioControlador.EliminarJuego(juego);
        juegos = await ServicioControlador.ObtenerJuegos(); //actualiza la lista
    }
    private void IniciarEdicion(Juego juego)
    {
        IdEditar = juego.Identificador;
        editNombre = juego.Nombre;
    }
    private void CancelarEdicion()
    {
        IdEditar = null;
        editNombre = string.Empty;
    }

    private async Task GuardarEdicion(Juego juego)
    {
        if (string.IsNullOrWhiteSpace(editNombre))
            return;

        juego.Nombre = editNombre;
        await ServicioControlador.ActualizarJuego(juego);
        juegos = await ServicioControlador.ObtenerJuegos();
        IdEditar = null;
        editNombre = string.Empty;
    }
}
